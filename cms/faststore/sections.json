[
  {
    "name": "Symbols",
    "schema": {
      "title": "Icones do site",
      "type": "object"
    }
  },
  {
    "name": "FirstSection",
    "schema": {
      "title": "Primeira seção",
      "description": "Esta é a primeira seção da página",
      "type": "object",
      "properties": {
        "title": {
          "title": "Primeiro titulo",
          "type": "string",
          "default": "Texto padrão"
        },
        "image": {
          "title": "Imagem de fundo",
          "type": "string",
          "widget": {
            "ui:widget": "image-uploader"
          }
        }
      }
    }
  },
  {
    "name": "TopBar",
    "schema": {
      "title": "Top Bar",
      "description": "Barra superior com mensagens rotativas",
      "type": "object",
      "properties": {
        "items": {
          "title": "Itens da Top Bar",
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": {
            "type": "object",
            "title": "Item",
            "required": ["text"],
            "properties": {
              "text": {
                "type": "string",
                "title": "Texto"
              },
              "url": {
                "type": "string",
                "title": "Link"
              },
              "target": {
                "type": "boolean",
                "title": "Abrir em nova guia",
                "default": false
              }
            }
          },
          "default": [
            {
              "text": "Frete grátis para todo o Brasil",
              "url": "",
              "blank": false
            },
            {
              "text": "Parcele em até 10x sem juros",
              "url": "",
              "blank": false
            },
            {
              "text": "Entrega rápida",
              "url": "",
              "blank": false
            },
            {
              "text": "Troca facilitada",
              "url": "",
              "blank": false
            }
          ]
        }
      }
    }
  },
  {
    "name": "BannerPrincipal",
    "schema": {
      "title": "Banner Principal",
      "type": "object",
      "properties": {
        "items": {
          "title": "Lista de banners",
          "type": "array",
          "minItems": 1,
          "maxItems": 12,
          "items": {
            "type": "object",
            "title": "Banner",
            "properties": {
              "src": {
                "title": "Imagens do banner",
                "type": "object",
                "properties": {
                  "desktop": {
                    "title": "Imagem Desktop",
                    "type": "string",
                    "widget": {
                      "ui:widget": "image-uploader"
                    }
                  },
                  "tablet": {
                    "title": "Imagem Tablet",
                    "type": "string",
                    "widget": {
                      "ui:widget": "image-uploader"
                    }
                  },
                  "mobile": {
                    "title": "Imagem Mobile",
                    "type": "string",
                    "widget": {
                      "ui:widget": "image-uploader"
                    }
                  }
                }
              },
              "alt": {
                "title": "Texto alternativo",
                "type": "string"
              },
              "link": {
                "title": "Link",
                "type": "string"
              },
              "target": {
                "title": "Abrir em nova aba",
                "type": "boolean",
                "default": false
              }
            }
          }
        },
        "controls": {
          "title": "Controles do slider",
          "type": "string",
          "default": "pagination",
          "enum": ["pagination", "navigation", "none"],
          "enumNames": ["Paginação", "Navegação (setas)", "Nenhum"]
        }
      }
    }
  }
]
